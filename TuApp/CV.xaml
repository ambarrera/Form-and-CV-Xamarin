<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuApp.CVPage"
             BackgroundColor="Beige">

    <StackLayout Padding="20">
        <Label Text="CV" FontSize="Large" HorizontalOptions="Center" TextColor="DarkGray" />

        <Label Text="{Binding NombreCompleto}" Margin="0,10,0,0" FontAttributes="Bold" />
        <Label Text="{Binding FechaNacimiento, StringFormat='Fecha de Nacimiento: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding Ocupacion}" />
        <Label Text="{Binding Contacto}" />
        <Label Text="{Binding Nacionalidad}" />
        <Label Text="{Binding NivelIngles}" />
        <Label Text="{Binding LenguajesProgramacion}" />
        <Label Text="{Binding Aptitudes}" />
        <Label Text="{Binding Habilidades}" />
        <Label Text="{Binding Perfil}" Margin="0,10,0,0" />

    </StackLayout>

</ContentPage>